{
	"manifest_version": 2,
	"name": "Transformice Favorites Threads Notifications",
	"short_name": "TFM Forum Pro Tool",
	"description": "Get notifications everytime your favorite posts has some activity.",
	"version": "5.3",
	"icons": {
		"16": "assets/img/icons/16.png",
		"48": "assets/img/icons/48.png",
		"128": "assets/img/icons/128.png"
	},
	"browser_action": {
		"default_icon": "assets/img/icons/16.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["assets/libs/js/jquery.min.js", "assets/js/languages.min.js", "assets/js/background.min.js"],
		"persistent": true
	},
	"permissions": [
		"*://atelier801.com/*",
		"storage",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["*://atelier801.com/*"],
			"js": ["assets/libs/js/jquery.min.js","assets/js/upgradeForum.min.js"],
			"css": ["assets/css/webInterface.css"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources" : [
		"assets/img/webInterfaceIcons/*"
	]
}
